{
	"schema":"1.0",
	"title":"Privilege Manager",
	"category":"CMS",
	"privilege":"*",
	"blocked":false,
	"rowlink":false,
	"rowsPerPage":20,
	"showExtraColumn":"checkbox",
	"custombar":false,
	"source":{
		"type":"sql",
		"table":"lgks_privileges",
    "cols":"*,(SELECT count(*) FROM lgks_users WHERE lgks_users.privilegeid=lgks_privileges.id AND lgks_users.guid = '#SESS_GUID#' GROUP BY lgks_users.privilegeid) as user_count",
		"where":{
			"guid":{"VALUE":"#SESS_GUID#","OP":"EQ"}
		},
		"sort":"id asc",
		"limit":10
	},
	"buttons":{
		"editRecord": {
			"label":"Edit Privilege",
			"icon":"fa fa-pencil"
		},
		"viewUsers":{
			"label":"List Users In This Section",
			"icon":"fa fa-users pull-left"
		}
	},
	"datagrid":{
		"id":{
			"label":"ID",
			"hidden":false,
			"searchable":false,
			"sortable":true,
			"groupable":false,
			"classes":"",
			"style":"width:50px;",
			"formatter":"text"
		},
		"name":{
			"label":"Access Name",
			"searchable":true
		},
    "user_count":{
      "label":"Users"
    },
    "remarks":{
			"label":"Descs",
			"searchable":true
		},
		"site":{
			"label":"For Site",
			"searchable":true
		},
		"blocked":{
			"label":"Blocked",
			"formatter":"checkbox",
			"searchable":true,
			"filter":{
				"type":"select",
				"nofilter":"--",
				"options":{
					"true":"Blocked",
					"false":"Not Blocked"
				}
			}
		},
		"created_on":{
			"label":"Created At",
