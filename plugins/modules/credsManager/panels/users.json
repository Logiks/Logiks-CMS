{
	"schema":"1.0",
	"title":"User Manager",
	"category":"CMS",
	"privilege":"*",
	"blocked":false,
	"rowlink":false,
	"rowsPerPage":20,
	"showExtraColumn":"checkbox",
	"custombar":false,
	"source":{
		"type":"sql",
		"table":"lgks_users, lgks_access, lgks_privileges",
        "cols":"lgks_users.id,lgks_users.guid,lgks_users.userid,lgks_users.name,lgks_users.gender,lgks_users.organization_name,lgks_users.organization_email,lgks_users.email,lgks_users.mobile,lgks_users.address,lgks_users.region,lgks_users.country,lgks_users.zipcode,lgks_users.geolocation,lgks_users.geoip,lgks_users.tags,lgks_users.avatar_type,lgks_users.avatar,lgks_users.blocked,lgks_users.expires,lgks_users.security_policy,lgks_users.edited_on,lgks_users.edited_by,lgks_users.created_on,lgks_users.created_by, lgks_access.name as access_name,lgks_privileges.name as privilege_name,lgks_privileges.remarks as privilege_remarks,lgks_users.accessid,lgks_users.privilegeid",
		"where":{
            "lgks_users.accessid=lgks_access.id AND lgks_users.privilegeid=lgks_privileges.id":"RAW",
            "lgks_users.guid":{"VALUE":"#SESS_GUID#","OP":"EQ"}
		},
		"sort":"id asc",
		"limit":10
	},
	"buttons":{
		"infoRecord": {
			"label":"User Information",
			"icon":"fa fa-info-circle"
		},
		"more": {
		    "editRecord": {
    			"label":"Edit User",
    			"icon":"fa fa-pencil"
    		},
    		"editPWD": {
    			"label":"Change Password",
    			"icon":"fa fa-key pull-left"
    		}
		}
	},
	"sidebar":{
	    "type":"list",
	    "source":{
	        "lgks_users.privilegeid":{
    	        "table":"lgks_privileges",
    	        "cols":"name as title, id as value",
    	        "where":{
    	            "blocked":"false",
    	            "lgks_privileges.guid":{"VALUE":["#SESS_GUID#","global"],"OP":"IN"},
    	            "id IN (SELECT privilegeid FROM lgks_users GROUP BY privilegeid)":"RAW"
    	        }
    	    }
	    }
	},
	"datagrid":{
		"lgks_users.id":{
			"label":"ID",
			"hidden":false,
			"searchable":false,
			"sortable":true,
			"groupable":false,
			"classes":"",
			"style":"width:50px;",
			"formatter":"text"
		},
    "lgks_users.guid":{
			"label":"GUID",
			"sortable":true,
			"searchable":true
		},
		"userid":{
			"label":"UserID",
			"sortable":true,
			"searchable":true
		},
		"lgks_users.name":{
			"label":"User Name",
			"searchable":true
		},
        "privilege_name":{
			"label":"Privilege",
			"searchable":true,
            "alias":"lgks_privileges.name"
		},
        "access_name":{
			"label":"Access",
			"searchable":true,
            "alias":"lgks_access.name"
		},
		"organization_name":{
			"label":"Organisation",
			"searchable":true
		},
		"mobile":{
			"label":"Mobile",
			"searchable":true
		},
		"email":{
			"label":"EMail",
			"searchable":true
		},
		"country":{
			"label":"Country",
			"hidden":true,
			"searchable":true
		},
		"gender":{
			"label":"Gender",
			"searchable":true,
			"filter":{
				"type":"select",
				"options":{
					"male":"Male",
					"female":"Female"
				}
			}
		},
		"lgks_users.blocked":{
			"label":"Blocked",
			"formatter":"checkbox",
			"searchable":true,
			"filter":{
				"type":"select",
				"nofilter":"--",
				"options":{
					"true":"Blocked",
					"false":"Not Blocked"
				},
				"value":"false"
			}
		},
		"lgks_users.created_on":{
			"label":"Created At",
			"formatter":"date",
			"searchable":true,
			"filter":{
				"type":"date"
			}
		},
		"lgks_users.edited_on":{
			"label":"Updated At",
			"formatter":"date",
			"searchable":true,
			"filter":{
				"type":"date"
			}
		}
	}
}
