{
	"schema":"1.0",
	"title":"User Manager",
	"category":"CMS",
	"privilege":"*",
	"blocked":false,
	"rowlink":false,
	"rowsPerPage":20,
	"showExtraColumn":"checkbox",
	"custombar":false,
	"source":{
		"type":"sql",
		"table":"lgks_users",
		"where":{
			"guid":{"VALUE":"#SESS_GUID#","OP":"EQ"}
		},
		"sort":"id asc",
		"limit":10
	},
	"buttons":{
		"infoRecord": {
			"label":"User Information",
			"icon":"fa fa-info-circle"
		},
		"editRecord": {
			"label":"Edit User",
			"icon":"fa fa-pencil"
		},
		"editPWD": {
			"label":"Change Password",
			"icon":"fa fa-key pull-left"
		}
	},
	"datagrid":{
		"id":{
			"label":"ID",
			"hidden":false,
			"searchable":false,
			"sortable":true,
			"groupable":false,
			"classes":"",
			"style":"width:50px;",
			"formatter":"text"
		},
		"userid":{
			"label":"UserID",
			"sortable":true,
			"searchable":true
		},
		"name":{
			"label":"User Name",
			"searchable":true
		},
		"organization_name":{
			"label":"Organisation",
			"searchable":true
		},
		"mobile":{
			"label":"Mobile",
			"searchable":true
		},
		"email":{
			"label":"EMail",
			"searchable":true
		},
		"country":{
			"label":"Country",
			"hidden":true,
			"searchable":true
		},
		"gender":{
			"label":"Gender",
			"searchable":true,
			"filter":{
				"type":"select",
				"options":{
					"male":"Male",
					"female":"Female"
				}
			}
		},
		"blocked":{
			"label":"Blocked",
			"formatter":"checkbox",
			"searchable":true,
			"filter":{
				"type":"select",
				"nofilter":"--",
				"options":{
					"true":"Blocked",
					"false":"Not Blocked"
				}
			}
		},
		"created_on":{
			"label":"Created At",
			"formatter":"date",
			"searchable":true,
			"filter":{
				"type":"date"
			}
		},
		"edited_on":{
			"label":"Updated At",
			"formatter":"date",
			"searchable":true,
			"filter":{
				"type":"date"
			}
		}
	}
}
